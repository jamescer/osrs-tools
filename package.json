{
  "name": "osrs-tools",
  "description": "A comprehensive TypeScript library for Old School RuneScape (OSRS) data and utilities, including quest data, skill requirements, and game item information",
  "version": "2.3.0",
  "license": "MIT",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "sideEffects": false,
  "files": [
    "dist/**"
  ],
  "engines": {
    "node": ">=18"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/jamescer/osrs-tools.git"
  },
  "keywords": [
    "osrs",
    "runescape",
    "typescript",
    "quest",
    "game-data"
  ],
  "scripts": {
    "run:osrs-tools-demo": "npm --prefix ./projects/osrs-tools-demo run start",
    "build:osrs-tools": "tsc -p tsconfig.osrs-tools.json",
      "build:osrs-tools-demo": "npm --prefix ./projects/osrs-tools-demo run build",
      "package:osrs-tools": "node ./scripts/assemble-package.js",
      "pack-and-install-demo": "node ./scripts/pack-and-install-demo.js",
    "build:osrs-tools:npm": "tsc -p tsconfig.build.json",
    "clean": "rimraf dist coverage",
    "dev": "tsc --watch -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "runExample": "ts-node examples/ExampleQuest.ts",
    "scrapeQuestList": "ts-node tools/ScrapeQuestData.ts",
    "scrapeSlayerData": "ts-node tools/ScrapeSlayerData.ts",
    "getAccountData": "ts-node tools/GetAccountData.ts",
    "getQuestDetails": "ts-node tools/GetQuestDetails.ts",
    "prebuild": "npm run clean",
    "prepublishOnly": "npm run build && npm test",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch",
    "test:ci": "jest --ci --coverage",
    "coverage": "jest --coverage && codecov",
    "postpublish": "git push && git push --tags",
    "preversion": "npm test",
    "version": "npm run build && git add dist"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^8.57.0",
    "@tsconfig/recommended": "^1.0.11",
    "@types/jest": "^30.0.0",
    "@types/node": "^18.19.130",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "codecov": "^3.8.2",
    "commitlint": "^17.8.1",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-jest": "^27.9.0",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sort-destructure-keys": "^1.6.0",
    "eslint-plugin-sort-keys-fix": "^1.1.2",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.10",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  }
}
